    <!--   __{ KeyCode::vk_open_URL_APP_Firefox, KeyCode::ESCAPE, KeyCode::VK_WAIT_10MS, KeyCode::A, KeyCode::VK_WAIT_10MS, KeyCode::SPACE, }__ -->
    <!-- </autogen> -->

    <autogen>
      __KeyToKey__
      KeyCode::L, ModifierFlag::OPEN_APPS,

      KeyCode::VK_OPEN_URL_APP_Karabiner,
    </autogen>

    <autogen>
      __KeyToKey__
      KeyCode::S, ModifierFlag::OPEN_APPS,

      KeyCode::VK_OPEN_URL_APP_Iterm,
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::D, ModifierFlag::OPEN_APPS,

      KeyCode::VK_OPEN_URL_APP_Emacs,
    </autogen>
  </item>
</root>
